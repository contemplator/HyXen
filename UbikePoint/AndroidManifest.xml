<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ubikepoint"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ubikepoint.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ubikepoint.Substring"
            android:label="@string/title_activity_xpath_point" >
        </activity>
        <activity
            android:name="com.ubikepoint.Stations"
            android:label="@string/title_activity_station" >
        </activity>
        <activity
            android:name="com.ubikepoint.TestAssets"
            android:label="@string/title_activity_test_assets" >
        </activity>
    </application>

</manifest>
